<div class="">
  <% @users.each do |user| %>
    <%= link_to user_path(user) do %>
    <div class="">
      <%= attachment_image_tag user, :image, :fill, 180, 180, class: "img-circle pull-left profile-thumb" %>
    </div>
    <div class="">
      名前<%= user.pet_name %>
    </div>
    <% end %>
    <div class="">
      <% if current_user.following?(user) %>
        <%= link_to 'フォロー外す', user_relationships_path(user), method: :delete %>
      <% else %>
        <%= link_to 'フォローする', user_relationships_path(user), method: :post %>
      <% end %>
    </div>
  <% end %>
</div>