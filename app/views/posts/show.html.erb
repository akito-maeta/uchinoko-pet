<h2></h2>
<div class="row">

  <div class="col-lg-3 col-lg-offset-3">
    <div>
      <%= attachment_image_tag @post, :image, :fill, 280, 280 %>
    </div>
  </div>

  <div class="col-lg-3">
    <div class="show-right-box">
      <div class="post-show-pro-name clearfix">
        <div class="post-show-profile">
        <%= link_to(user_path(@post.user), class: 'post-show-petname-link') do %>
          <%= attachment_image_tag @post.user, :image, size: "40x40", fallback: "noimage.jpg", class: "img-circle post-show-img-pro" %>
        </div>
        <div class="post-show-petname">
          <%= @post.user.pet_name.truncate(12) %>
        <% end %>
        </div>
      </div>
      <div class="kk">
      </div>

      <div class="post-show-title">
        <%= @post.title %>
      </div>
      <div class="post-show-introduction">
        <%= simple_format render_with_hashtags(@post.introduction) %>
      </div>
    </div>
  </div>
  <div class="col-lg-3">
  </div>
</div>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3 clearfix">
    <div class="show_like_<%= @post.id %>">
      <%= render 'detail', post: @post %>
    </div>
    <% if @post.user == current_user %>
      <div class="post-destroy-button">
        <%= link_to(post_path(@post), method: :delete, data: {confirm: "本当に削除されますか？"}, class: 'post-show-destroylink') do %>
          <i class="fas fa-trash"></i> 削除
        <% end %>
      </div>
      <div class="post-edit-button">
        <%= link_to(edit_post_path(@post), class: 'post-show-editlink') do %>
          <i class="fas fa-pencil-alt"></i> 編集
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3 comment">
    <div class="comment-create">
      <%= render 'comments/form', comment: @comment, post: @post %>
    </div>

    <div class="comment-area">
      <%= render 'comments/index', comments: @comments %>
    </div>

  </div>
  <div class="col-lg-3">
  </div>

</div>
