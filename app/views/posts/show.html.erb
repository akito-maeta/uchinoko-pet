<h2>投稿詳細</h2>
<%= attachment_image_tag @post, :image, :fill, 100, 100 %>
<%= @post.title %>

<%= render_with_hashtags(@post.introduction) %>

<%= link_to "編集する", edit_post_path(@post) %>
<% if @post.user == current_user %>
  <%= link_to "削除", post_path(@post), method: :delete %>
<% end %>

<% if @post.liked_by?(current_user) %>
  <%= link_to post_likes_path(@post), method: :delete do %>
  <span class="glyphicon glyphicon-heart"><%= @post.likes.count%></span>
  <% end %>
<% else %>
  <%= link_to post_likes_path(@post), method: :post do %>
  <span class="glyphicon glyphicon-heart-empty"><%= @post.likes.count %></span>
  <% end %>
<% end %>