<% if post.liked_by?(current_user) %>
  <div class="show-box-like">
    <%= link_to(post_likes_path(post), method: :delete, remote: true, class: 'show-like-link') do %>
      <i class="fas fa-heart"></i>Liked</span>
    <% end %>
  </div>
<% else %>
  <div class="show-box-liked">
    <%= link_to(post_likes_path(post), method: :post, remote: true, class: 'show-liked-link') do %>
      <i class="fas fa-heart"></i>Like</span>
    <% end %>
  </div>
<% end %>

